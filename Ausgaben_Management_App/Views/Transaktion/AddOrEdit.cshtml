@model Ausgaben_Management_App.Models.TbTransaktion

@{
    ViewData["PageTitle"] = Model.TransaktionId == 0 ? "Neu Transktion hinfügen" : "Transktion Bearbeiten";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TransaktionId" value="@Model.TransaktionId" />
                <div class="mb-3">
                    <ejs-datepicker id="datum" ejs-for="Datum"
                    placeholder="Datum" floatLabelType="Always" format="MMM-dd-yy"></ejs-datepicker>
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
            <div class="mb-3">
                    <ejs-dropdownlist id="ddlkategorie" ejs-for="kategorieId"
                                      dataSource="@ViewBag.TbKategorien" placeholder="kategorie"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                      filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="kategorieId" text="TitelMitIcon"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="kategorieId" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                    <ejs-numerictextbox id="betrag" ejs-for="Betrag"
                                        placeholder="Betrag" floatLabelType="Always"
                                        min=0 format="C2" currency="EUR"></ejs-numerictextbox>
                    <span asp-validation-for="Betrag" class="text-danger fs-6"></span>
            </div>
                <div class="mb-3">
                    <ejs-textbox id="note" placeholder="Note" ejs-for="Note"
                                 floatLabelType="Always" multiline="true"></ejs-textbox>
                </div>
            
            <div class="mb-3">
                    <ejs-button id="submit" type="submit" content="Erstellen" cssClass="e-success"> </ejs-button>
            </div>
        </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" >
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>



